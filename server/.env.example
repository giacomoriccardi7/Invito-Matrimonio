# Server (Node/Express) environment variables

# Base
PORT=3001
CORS_ORIGIN=http://localhost:4173

# Google Sheets
GOOGLE_SHEET_ID=
GOOGLE_KEY_FILE=credentials.json
GOOGLE_SHEET_RANGE=Sheet1!A:H

# Email - scegli UNO tra SMTP (A) o Resend (B)
## Opzione A: SMTP (es. Gmail con App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=
EMAIL_PASS=

## Opzione B: Resend (fallback/alternativa a SMTP)
RESEND_API_KEY=
RESEND_FROM="RSVP Wedding <onboarding@resend.dev>"

# Destinatario notifiche RSVP
RECIPIENT_EMAIL=

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Core
PORT=3001
CORS_ORIGIN=https://your-frontend.example.com

# Google Sheets
GOOGLE_SHEET_ID=your-google-sheet-id
GOOGLE_KEY_FILE=credentials.json
GOOGLE_SHEET_RANGE=Sheet1!A:H

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password
RECIPIENT_EMAIL=recipient@example.com

# Supabase (Service role preferred, fallback anon)
SUPABASE_URL=https://your-supabase-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
# If you don't have service role, set anon, but some operations may require service role
